<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="bootstrap_mongodb.php">
    <php>
        <var name="phpcr.user" value="admin" />
        <var name="phpcr.pass" value="admin" />
        <var name="phpcr.workspace" value="tests" />
        <var name="phpcr.transport" value="mongodb" />
        <!-- Path to MongoDB stuff for transport -->
        <var name="phpcr.doctrine.loader" value="/var/data/libraries/mongodb/lib/vendor/doctrine-common/lib/Doctrine/Common/ClassLoader.php" />
        <var name="phpcr.doctrine.commondir" value="/var/data/libraries/mongodb/lib/vendor/doctrine-common/lib" />
        <var name="phpcr.doctrine.mongodbdir" value="/var/data/libraries/mongodb/lib" />
        <var name="phpcr.doctrine.mongodb.server" value="mongodb://localhost" />
        <var name="phpcr.doctrine.mongodb.dbname" value="phpcr_tests" />
    </php>

    <testsuites>
        <testsuite name="phpcr">
            <directory>suite/tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../</directory>
            <exclude>
                <directory>../tests</directory>
                <directory>.</directory>
                <file>../src/jackalope/transport/curl.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>